<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/landingblue">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/welcometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="@dimen/dp20"
            android:text="We are happy to help you!"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/callus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcometxt"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/circle"
            android:padding="10dp"
            android:src="@drawable/ic_call"
            android:tooltipText="Call Us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/callus"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Call us"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/mailus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcometxt"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/callus"
            android:background="@drawable/circle"
            android:padding="10dp"
            android:src="@drawable/ic_mail"
            android:tooltipText="Mail Us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mailus"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:text="Mail us"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>

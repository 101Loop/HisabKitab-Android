<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/lightblueback"
    android:layout_height="match_parent"
    tools:context=".Activities.AddDebit">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbar"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:background="@color/landingblue">
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_marginRight="@dimen/dp30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/name"
                android:singleLine="true"
                android:background="@drawable/edittextbackground"
                android:id="@+id/contactname"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:drawableRight="@drawable/ic_contact"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/contactname"
                android:layout_centerHorizontal="true"
                android:inputType="numberDecimal"
                android:layout_marginTop="10dp"
                android:id="@+id/amount"
                android:paddingLeft="10dp"
                android:background="@drawable/edittextbackground"
                android:drawablePadding="5dp"
                android:hint="@string/amount"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="@string/comment"
                android:paddingLeft="10dp"
                android:background="@drawable/edittextbackground"
                android:id="@+id/comment"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/amount"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/comment"
                android:hint="@string/date"
                android:textSize="17dp"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittextbackground"
                android:layout_centerHorizontal="true"
                android:drawableRight="@drawable/ic_calendar"
                android:paddingRight="5dp"
                android:id="@+id/date"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_mode"
                android:layout_centerHorizontal="true"
                android:id="@+id/modetxt"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_below="@+id/date"
                android:layout_marginTop="20dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/modetxt"
                android:id="@+id/radiogroup"
                android:weightSum="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:checked="false"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:id="@+id/cash"
                    android:button="@null"
                    android:background="@drawable/radiobutton"
                    android:text="@string/cash"
                    android:layout_margin="1dp"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:checked="false"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:button="@null"
                    android:id="@+id/cheque"
                    android:layout_margin="1dp"
                    android:background="@drawable/radiobutton"
                    android:text="@string/cheque"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:checked="false"
                    android:id="@+id/acct"
                    android:button="@null"
                    android:layout_margin="1dp"
                    android:background="@drawable/radiobutton"
                    android:text="@string/acc_transfer"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="@string/card"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:button="@null"
                    android:layout_margin="1dp"
                    android:background="@drawable/radiobutton"
                    android:id="@+id/card"
                    android:checked="false"/>
            </RadioGroup>

        </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/landingblue"
        android:layout_alignParentBottom="true"
        android:text="@string/submit"
        android:textColor="@color/white" />
</RelativeLayout>
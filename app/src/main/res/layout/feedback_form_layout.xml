<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="15dp"
        android:background="@drawable/star"
        android:gravity="center"
        android:id="@+id/first"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/first"
        android:background="@drawable/star"
        android:gravity="center"
        android:id="@+id/second"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_margin="5dp"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/second"
        android:background="@drawable/star"
        android:gravity="center"
        android:id="@+id/third"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="15dp"
        android:id="@+id/fourth"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/third"
        android:background="@drawable/star"
        android:gravity="center"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:layout_toRightOf="@id/fourth"
        android:textSize="15dp"
        android:layout_margin="5dp"
        android:background="@drawable/star"
        android:gravity="center"
        android:id="@+id/five"
        android:layout_centerVertical="true"
        />

        <!--Selected Star-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="15dp"
            android:background="@drawable/star_selected"
            android:gravity="center"
            android:id="@+id/first_selected"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="15dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/first_selected"
            android:background="@drawable/star_selected"
            android:gravity="center"
            android:visibility="invisible"
            android:id="@+id/second_selected"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:visibility="invisible"
            android:layout_toRightOf="@+id/second_selected"
            android:background="@drawable/star_selected"
            android:gravity="center"
            android:id="@+id/third_selected"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="15dp"
            android:visibility="invisible"
            android:id="@+id/fourth_selected"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/third_selected"
            android:background="@drawable/star_selected"
            android:gravity="center"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_toRightOf="@id/fourth_selected"
            android:textSize="15dp"
            android:visibility="invisible"
            android:layout_margin="5dp"
            android:background="@drawable/star_selected"
            android:gravity="center"
            android:id="@+id/five_selected"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <EditText
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:hint="Enter Feedback"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/linearlayout"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/feedback"
        android:background="@drawable/edittextbackground"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_below="@+id/feedback"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/lightblue"
        />
</RelativeLayout>

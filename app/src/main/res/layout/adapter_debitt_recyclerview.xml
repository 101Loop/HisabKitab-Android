<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <!--Card View Layoout-->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:backgroundTintMode="screen"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/whitishgreylayout"
            android:layout_height="match_parent">

            <!--Name view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Name:  "
                android:textColor="@color/landingblue"
                android:textStyle="bold"
                android:id="@+id/nameid"
                android:theme="@style/Base.TextAppearance.AppCompat.Body2"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:paddingLeft="10dp" />

            <!--User's name detail-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divya Tiwari"
                android:textStyle="italic"
                android:id="@+id/namedetail"
                android:layout_toRightOf="@+id/nameid"
                android:layout_marginTop="30dp"
                android:theme="@style/Base.TextAppearance.AppCompat.Body1"

                />
            <!--Amount view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: â‚¹"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/nameid"
                android:theme="@style/Base.TextAppearance.AppCompat.Body2"
                android:id="@+id/amount"
                />

            <!--Amount detail-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/amount"
                android:layout_below="@id/nameid"
                android:text="200"
                android:theme="@style/Base.TextAppearance.AppCompat.Body1"
                android:textStyle="italic"
                android:id="@+id/amountdetail"
                android:layout_marginTop="5dp"/>

           <!--Mode view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amount"
                android:paddingLeft="10dp"
                android:id="@+id/mode"
                android:theme="@style/Base.TextAppearance.AppCompat.Body2"
                android:text="Mode: "/>

            <!--Mode detail-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/mode"
                android:layout_below="@id/amount"
                android:textStyle="italic"
                android:id="@+id/modedetail"
                android:theme="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Cash"/>

            <!--Comment view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mode"
                android:paddingLeft="10dp"
                android:id="@+id/comment"
                android:theme="@style/Base.TextAppearance.AppCompat.Body2"
                android:text="Comment(s): "/>

            <!--Comment detail-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/comment"
                android:layout_below="@id/mode"
                android:textStyle="italic"
                android:id="@+id/commentdetail"
                android:theme="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="This is a test comment"/>

            <!--Transaction date view-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_below="@+id/comment"
                android:paddingLeft="10dp"
                android:id="@+id/transaction"
                android:theme="@style/Base.TextAppearance.AppCompat.Body2"
                android:text="Transaction Date: "/>

            <!--Transaction date detail-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/transaction"
                android:layout_below="@id/comment"
                android:id="@+id/transactiondetail"
                android:textStyle="italic"
                android:theme="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="20-07-2018"/>

            <!--Delete button-->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:layout_marginTop="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:drawableLeft="@drawable/ic_delete"
                android:background="@drawable/rect_button"
                android:id="@+id/delbtn"
                android:textColor="@color/red"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
